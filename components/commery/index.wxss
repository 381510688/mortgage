/* components/commery/index.wxss */
.commery-container {
    --td-input-disabled-text-color: rgba(0,0,0,0.9);
}
.custom-label{
    font-weight: 800;
    display: inline-block;
    width: 100px;
}
.margin-8 {
    margin: 8px;
}
.tips {
    line-height: 40px;
    font-size: 12px;
    color: rgb(51, 51, 51);
}
.tips .historicalRecord {
    font-size: 12px;
    vertical-align: middle;
}
.popup-container {
    width: 80vw;
    height: 330px;
    background: #fff;
    padding: 16px 16px;
    color: rgb(51, 51, 51);
    border-radius: 10px;
    font-size: 13px;
    font-weight: 400;
    line-height: 1.5;
}
.popup-container .title {
    font-size: 16px;
    line-height: 30px;
    font-weight: 700;
}
.popup-container .keyPoint{
    color:rgb(49, 113, 245);
}
.popup-container .subtitle {
    line-height: 30px;
    font-weight: 700;
}
/** 表格 */
.table {
    margin: 10px 0;
    border: 1px solid rgba(230, 230, 230);
}
.table .header {
    background-color: rgba(230, 230, 230, 1);
}
.table text {
    display: inline-block;
    box-sizing: border-box;
    width: 33%;
    padding: 6px 0;
    text-align: center;
}
.border {
    border-right: 1px solid rgba(230, 230, 230);
}
 
